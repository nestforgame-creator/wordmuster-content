{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wordmuster.dev/schemas/challengeSettings.schema.json",
  "title": "Challenge Settings Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dataVersion",
    "generatedOn",
    "sourceLexiconVersion",
    "difficultyBands",
    "timers",
    "scoring",
    "hints"
  ],
  "properties": {
    "dataVersion": { "type": "string", "minLength": 1 },
    "generatedOn": { "type": "string", "format": "date-time" },
    "sourceLexiconVersion": { "type": "string", "minLength": 1 },

    "difficultyBands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "label", "letterCount", "repeatsAllowedTimers"],
        "properties": {
          "code": {
            "type": "string",
            "enum": ["EASY", "MEDIUM", "HARD", "PRO"]
          },
          "label": { "type": "string", "minLength": 1 },
          "letterCount": { "type": "integer", "minimum": 4, "maximum": 14 },
          "repeatsAllowedTimers": {
            "type": "array",
            "items": { "type": "integer", "enum": [30, 60, 90] },
            "uniqueItems": true
          }
        }
      }
    },

    "timers": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "integer", "enum": [30, 60, 90] },
      "uniqueItems": true
    },

    "scoring": {
      "type": "object",
      "additionalProperties": false,
      "required": ["completionMode", "allowTargetMode", "allWordsBonus"],
      "properties": {
        "completionMode": {
          "type": "string",
          "enum": ["FOUND_OVER_TOTAL_POSSIBLE"]
        },
        "allowTargetMode": { "type": "boolean" },
        "allWordsBonus": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled", "coinsBonus"],
          "properties": {
            "enabled": { "type": "boolean" },
            "coinsBonus": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },

    "hints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requiresAd", "types"],
      "properties": {
        "requiresAd": { "type": "boolean" },
        "types": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["code", "label", "coinsCost", "reveal"],
            "properties": {
              "code": { "type": "string", "enum": ["HINT_A", "HINT_B", "HINT_C"] },
              "label": { "type": "string", "minLength": 1 },
              "coinsCost": { "type": "integer", "minimum": 0 },
              "reveal": {
                "type": "object",
                "additionalProperties": false,
                "required": ["mode", "includeLength"],
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": ["FIRST_LETTER", "RANDOM_LETTER", "RANDOM_2_OR_3"]
                  },
                  "includeLength": { "type": "boolean" }
                }
              }
            }
          }
        }
      }
    }
  }
}
