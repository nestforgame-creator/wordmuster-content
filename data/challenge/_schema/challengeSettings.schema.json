{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wordmuster.dev/schemas/challengeSettings.schema.json",
  "title": "Challenge Settings Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dataVersion",
    "generatedOn",
    "sourceLexiconVersion",
    "language",
    "scoring",
    "difficultyBands",
    "hints"
  ],
  "properties": {
    "dataVersion": { "type": "string", "minLength": 1 },
    "generatedOn": { "type": "string", "format": "date-time" },
    "sourceLexiconVersion": { "type": "string", "minLength": 1 },
    "language": { "type": "string", "enum": ["EN"] },

    "scoring": {
      "type": "object",
      "additionalProperties": false,
      "required": ["defaultMode", "modes"],
      "properties": {
        "defaultMode": {
          "type": "string",
          "enum": ["COMPLETION_TOTAL_POSSIBLE", "COMPLETION_TARGET"]
        },
        "modes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["code", "formula"],
            "properties": {
              "code": { "type": "string", "minLength": 1 },
              "formula": { "type": "string", "minLength": 3 }
            }
          }
        }
      }
    },

    "difficultyBands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "code",
          "gradeHint",
          "letterCount",
          "timersSeconds",
          "allowLetterReuseByTimer"
        ],
        "properties": {
          "code": { "type": "string", "enum": ["EASY", "MEDIUM", "HARD", "PRO"] },
          "gradeHint": { "type": "string", "minLength": 1 },
          "letterCount": { "type": "integer", "minimum": 5, "maximum": 14 },
          "timersSeconds": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": { "type": "integer", "enum": [30, 60, 90] }
          },
          "allowLetterReuseByTimer": {
            "type": "object",
            "additionalProperties": false,
            "required": ["30", "60", "90"],
            "properties": {
              "30": { "type": "boolean" },
              "60": { "type": "boolean" },
              "90": { "type": "boolean" }
            }
          }
        }
      }
    },

    "hints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["currency", "options", "maxHintsPerRound"],
      "properties": {
        "currency": { "type": "string", "enum": ["COINS"] },
        "maxHintsPerRound": { "type": "integer", "minimum": 0, "maximum": 10 },
        "options": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["code", "costCoins", "reveals"],
            "properties": {
              "code": { "type": "string", "minLength": 1 },
              "costCoins": { "type": "integer", "minimum": 0 },
              "reveals": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "enum": ["firstLetter", "randomLetter", "twoLetters", "wordLength"]
                }
              }
            }
          }
        }
      }
    }
  }
}
