{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wordmuster.dev/schemas/lexicon.schema.json",
  "title": "Challenge Lexicon Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["lexiconVersion", "generatedOn", "language", "words"],
  "properties": {
    "lexiconVersion": { "type": "string", "minLength": 1 },
    "generatedOn": { "type": "string", "format": "date-time" },
    "language": { "type": "string", "enum": ["EN"] },
    "words": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 3,
        "pattern": "^[A-Z]+$"
      }
    }
  }
}

