{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wordmuster.dev/schemas/story/collections.schema.json",
  "title": "Story Collections Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["dataVersion", "generatedOn", "sourceLexiconVersion", "collections"],
  "properties": {
    "dataVersion": { "type": "string", "minLength": 1 },
    "generatedOn": { "type": "string", "format": "date-time" },
    "sourceLexiconVersion": { "type": "string", "minLength": 1 },
    "collections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "collectionCode",
          "title",
          "description",
          "language",
          "isUnlockedByDefault",
          "minChaptersToUnlock",
          "coverImageUrl",
          "displayOrder",
          "isActive"
        ],
        "properties": {
          "collectionCode": { "type": "string", "minLength": 2, "maxLength": 20, "pattern": "^[A-Z0-9_]+$" },
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "language": { "type": "string", "enum": ["EN"] },
          "iconKey": { "type": "string" },
          "isUnlockedByDefault": { "type": "boolean" },
          "minChaptersToUnlock": { "type": "integer", "minimum": 0 },
          "ageBand": { "type": "string" },
          "difficultyBand": { "type": "string", "enum": ["EASY", "MEDIUM", "HARD", "PRO"] },
          "coverImageUrl": { "type": "string", "minLength": 1 },
          "displayOrder": { "type": "integer", "minimum": 0 },
          "isActive": { "type": "boolean" }
        }
      }
    }
  }
}

