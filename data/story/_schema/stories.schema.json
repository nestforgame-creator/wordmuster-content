{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wordmuster.dev/schemas/storyStories.schema.json",
  "title": "Story Stories Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["dataVersion", "generatedOn", "sourceLexiconVersion", "language", "stories"],
  "properties": {
    "dataVersion": { "type": "string", "minLength": 1 },
    "generatedOn": { "type": "string", "format": "date-time" },
    "sourceLexiconVersion": { "type": "string", "minLength": 1 },
    "language": { "type": "string", "enum": ["EN"] },
    "stories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "storyId",
          "collectionCode",
          "title",
          "shortDescription",
          "moral",
          "language",
          "difficultyBand",
          "targetAgeBand",
          "totalChapters",
          "isUnlockedByDefault",
          "coverImageUrl",
          "displayOrder",
          "isActive"
        ],
        "properties": {
          "storyId": { "type": "string", "minLength": 1 },
          "collectionCode": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "shortDescription": { "type": "string", "minLength": 1 },
          "moral": { "type": "string", "minLength": 1 },

          "language": { "type": "string", "enum": ["EN"] },
          "difficultyBand": { "type": "string", "enum": ["EASY", "MEDIUM", "HARD", "PRO"] },
          "targetAgeBand": { "type": "string", "minLength": 1 },
          "totalChapters": { "type": "integer", "minimum": 1 },
          "isUnlockedByDefault": { "type": "boolean" },

          "coverImageUrl": { "type": "string" },
          "displayOrder": { "type": "integer", "minimum": 1 },
          "isActive": { "type": "boolean" }
        }
      }
    }
  }
}
